# GraphRAG Configuration File
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# API KEYS - Required for LLM Integration
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG=your-openai-org-id-here

# Anthropic API Configuration (Alternative to OpenAI)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# =============================================================================
# LLM MODEL CONFIGURATION
# =============================================================================

# Default LLM model to use
DEFAULT_LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# =============================================================================
# GRAPHRAG SYSTEM CONFIGURATION
# =============================================================================

# Data directory for PrimeKG dataset
GRAPHRAG_DATA_DIR=data

# Enable caching for faster loading
GRAPHRAG_USE_CACHE=true
CACHE_EXPIRATION_HOURS=24

# =============================================================================
# QUERY PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of entities/relationships/paths to retrieve
MAX_ENTITIES=50
MAX_RELATIONSHIPS=100
MAX_PATHS=20
MAX_PATH_LENGTH=3
MAX_HOPS=2

# Similarity and confidence thresholds
SIMILARITY_THRESHOLD=0.3
MIN_CONFIDENCE_SCORE=0.5
MEDICAL_CONFIDENCE_THRESHOLD=0.7

# Query timeout in seconds
QUERY_TIMEOUT=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum memory usage and threading
MAX_MEMORY_USAGE=4.0
NUM_THREADS=4
MAX_CONCURRENT_CALLS=3

# =============================================================================
# FEATURES AND LOGGING
# =============================================================================

# Feature flags
ENABLE_CITATIONS=true
INCLUDE_METADATA=true
INCLUDE_CONFIDENCE_SCORES=true
ENABLE_DRUG_INTERACTION_CHECK=true
ENABLE_SIDE_EFFECT_WARNINGS=true

# Logging configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
LOG_FILE=logs/graphrag.log
VERBOSE=false
DEBUG=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode settings
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false
TEST_MODE=false
ENVIRONMENT=development